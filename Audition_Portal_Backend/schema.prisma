generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Option {
  id         Int      @id @default(autoincrement())
  text       String
  isCorrect  Boolean
  questionId Int
  answers    Answer[]
  question   Question @relation(fields: [questionId], references: [id])
}

model User {
  id             Int              @id @default(autoincrement())
  username       String
  email          String           @unique
  googleId       String           @unique
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  picture        String?
  contact        String?          @unique
  gender         String?
  specialization String?
  round          Int?             @default(1)
  role           Role             @default(USER)
  hasGivenExam   Boolean          @default(false)
  auditionRounds AuditionRound[]
  roundTwo       RoundTwo?
  RoundTwoReview RoundTwoReview[]
  quizAttempts   QuizAttempt[]
}

model AuditionRound {
  id             Int      @id @default(autoincrement())
  userId         Int
  round          Int
  finalSelection Boolean?
  panel          Int?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id])
  reviews        Review[]

  @@unique([userId, round])
}

model Review {
  id              Int           @id @default(autoincrement())
  auditionRoundId Int
  panel           Int
  remarks         String?
  evaluatedBy     String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  auditionRound   AuditionRound @relation(fields: [auditionRoundId], references: [id])
}

model Question {
  id          Int          @id @default(autoincrement())
  description String
  picture     String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  type        QuestionType
  options     Option[]
}

model Answer {
  id          Int      @id @default(autoincrement())
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      Int
  questionId  Int
  optionId    Int?
  option      Option?  @relation(fields: [optionId], references: [id])
}

model RoundTwo {
  id          String          @id @default(uuid())
  taskAlloted String
  taskLink    String
  status      String
  addOns      String[]
  createdAt   DateTime        @default(now())
  userId      Int             @unique
  panel       Int             @default(0)
  tags        String[]
  updatedAt   DateTime        @default(now()) @updatedAt
  user        User            @relation(fields: [userId], references: [id])
  review      RoundTwoReview?
}

model RoundTwoReview {
  id         String    @id @default(uuid())
  attendance Boolean
  reviewedBy String
  taskgiven  String
  clubPrefer String
  subDomain  String
  hs_place   String
  reviews    String[]
  remarks    String
  rating     Int
  gd         Boolean
  general    Boolean
  forwarded  Boolean   @default(true)
  colour     String    @default("#898989")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  userId     Int
  roundTwoId String?   @unique
  roundTwo   RoundTwo? @relation(fields: [roundTwoId], references: [id])
  user       User      @relation(fields: [userId], references: [id])
}

model QuizAttempt {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  score     Int
  total     Int
  createdAt DateTime @default(now())
}

enum Role {
  USER
  MEMBER
  ADMIN
}

enum QuestionType {
  MCQ
  Descriptive
  Pictorial
}
